<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="20dp"
    android:paddingVertical="20dp"
    android:background="@color/white"
    >

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/item_main_image"
        android:src="@color/orange"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_main_title"
        android:text="제목"
        android:textStyle="bold"
        android:textColor="@color/text_title"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/item_main_image"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_main_area"
        android:text="ㅁㅁ동"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/item_main_image"
        app:layout_constraintTop_toBottomOf="@+id/item_main_title"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textColor="@color/text_sub"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_main_dot"
        android:text=" · "
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/item_main_area"
        app:layout_constraintTop_toBottomOf="@+id/item_main_title"
        android:textStyle="bold"
        android:textColor="@color/text_sub"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_main_time"
        android:text="n분전"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/item_main_dot"
        app:layout_constraintTop_toBottomOf="@+id/item_main_title"
        android:textStyle="bold"
        android:textColor="@color/text_sub"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_main_price"
        android:text="10,000"
        android:textStyle="bold"
        android:textColor="@color/text_title"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/item_main_image"
        app:layout_constraintTop_toBottomOf="@+id/item_main_area"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="원"
        android:textColor="@color/text_title"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/item_main_price"
        app:layout_constraintTop_toBottomOf="@+id/item_main_area" />

    <ImageView
        android:id="@+id/item_main_like"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_temp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_main_like_count"
        android:layout_marginEnd="6dp"
        />

    <TextView
        android:id="@+id/item_main_like_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="6dp"
        />

    <ImageView
        android:id="@+id/item_main_chat"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_temp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_main_chat_count"
        android:layout_marginEnd="6dp"
        />

    <TextView
        android:id="@+id/item_main_chat_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_main_like"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>